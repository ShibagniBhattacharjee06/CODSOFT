def add(x,y):
    return x + y
def subtract(x,y):
    return x-y
def multiply(x,y):
    return x*y
def divide(x,y):
    if y==0:
        return "Division by zero is not allowed"
    return x/y
while True:
    print("option:")
    print("enter 'add' for addition" )
    print("enter 'sub' for subtaction" )
    print("enter 'mul' for multiplication" )
    print("enter 'div' for division" )
    print("enter 'quit' to end the program")
    UI=input("enter your choice:")
    if UI=="quit":
        break
    if UI in ("add", "sub","mul"," div"):
        num1=float(input("enter first no:"))
        num2=float(input("enter second no:"))
        if UI=="add":
            print("result of addition is:",add(num1,num2))
        elif UI=="sub":
            print("result of Subtraction is:",subtract(num1,num2))
        elif UI=="mul":
            print("result oF multiplication is:",multiply(num1,num2))
        elif UI=="div":
            print("result od division is:",divide(num1,num2))
else:
    print("invalid input please try again")
